								<option value="2" {% if type.1 == 'seminar' %}selected{% endif %}>Семинар</option>
								<option value="3" {% if type.1 == 'elective' %}selected{% endif %}>Факультатив</option>
							</select>
						</td>
					</tr>
					<tr>
						<td class="key">Цикличность:</td>
						<td class="value">
							<select size="3" name="type_2">
								<option value="1" {% if row.type.0 == 'simple' %}selected{% endif %}>Простая</option>
								<option value="2" {% if row.type.0 == 'odd' %}selected{% endif %}>Нечетная</option>
								<option value="3" {% if row.type.0 == 'even' %}selected{% endif %}>Четная</option>
							</select>
						</td>
					</tr>
					<tr>
						<td class="key">По подгруппам:</td>
						<td class="value">
							<input type="checkbox" name="sg" checked>
						</td>
					</tr>
					<tr>
						<td class="key">Преподаватель:</td>
						<td class="value">
							<input type="text" size="50" maxlength="50" name="lec1" value="{{ row.lec1 }}"><br><div class="sg" style="display: block;">
							<input type="text" size="50" maxlength="50" name="lec2" value="{{ row.lec2 }}"></div>
						</td>
					</tr>
					<tr>
						<td class="key">Аудитория №:</td>
						<td class="value">
							<input type="text" size="4" maxlength="4" name="aud1" value="{{ row.aud1 }}"><div class="sg" style="display: block;">
							<input type="text" size="4" maxlength="4" name="aud2" value="{{ row.aud2 }}"></div>
						</td>
					</tr>
					<tr>
						<td class="key">Начало:</td>
						<td class="value">
							<input type="text" size="2" maxlength="2" name="bth1" value="{{ row.bt1.0 }}"> : <input type="text" size="2" maxlength="2" name="btm1" value="{{ row.bt1.1 }}"><br><div class="sg" style="display: block;">
							<input type="text" size="2" maxlength="2" name="bth2" value="{{ row.bt2.0 }}"> : <input type="text" size="2" maxlength="2" name="btm2" value="{{ row.bt2.1 }}"></div>
						</td>
					</tr>
					<tr>
						<td class="key">Окончание:</td>
						<td class="value">
							<input type="text" size="2" maxlength="2" name="eth1" value="{{ row.et1.0 }}"> : <input type="text" size="2" maxlength="2" name="etm1" value="{{ row.et1.1 }}"><br><div class="sg" style="display: block;">
							<input type="text" size="2" maxlength="2" name="eth2" value="{{ row.et2.0 }}"> : <input type="text" size="2" maxlength="2" name="etm2" value="{{ row.et2.1 }}"></div>
						</td>
					</tr>
					<tr>
						<td class="key">Предмет:</td>
						<td class="value">
							<input type="text" size="50" maxlength="50" name="subject" value="{{ row.subject }}">
						</td>
					</tr>
				</table>
			</fieldset>
			<div style="margin-left: 10px; margin-right: 10px;">
				<input style="padding: 5px;" type="submit" value="Изменить">
				| <a style="color: #0b55c4;" href="#" onclick="window.location.reload()">Назад</a>
				<div id="response" style="float: right;"></div>
			</div>
		</form>

