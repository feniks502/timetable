							</select>
						</td>
					</tr>
					<tr>
						<td class="key">Тип:</td>
						<td class="value">
							<select size="2" name="type_1">
								<option value="1">Лекция</option>
								<option value="2">Семинар</option>
								<option value="3">Факультатив</option>
							</select>
